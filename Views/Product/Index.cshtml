@model IEnumerable<Mango.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-lg-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0) {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model) {
                    <tr>
                        <td width="50%">@obj.CategoryName</td>
                        <td width="100%">@obj.Description</td>
                        <td width="30%">@obj.Status</td>
                        <td></td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else {
        <p> No product exist </p>
    }

</div>

